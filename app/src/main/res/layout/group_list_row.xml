<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="2pt"
    android:paddingBottom="2pt"
    android:layout_marginBottom="5pt">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/subs_grp_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100pt"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/subs_group_name"
                    android:text="Group Name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />
                <TextView
                    android:id="@+id/subs_group_total"
                    android:text="Group Total"
                    android:gravity="right"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>
            <TextView
                android:id="@+id/subs_owner_name"
                android:text="Owner Name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/subs_group_address"
                android:text="Address Text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
        </LinearLayout>
 </LinearLayout>